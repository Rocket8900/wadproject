// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id       String         @id @default(uuid())
  selfie   String?
  age      Int
  username String         @unique
  name     String
  email    String         @unique
  password String // hashed!
  gender   String
  type     String // enums("auto", "manual")
  language String
  tokens   StudentToken[]
  reviews  Review[]
  bookings Booking[]
  chatRoom ChatRoom[]
}

model Instructor {
  id           String            @id @default(uuid())
  name         String
  age          Int
  rating       Float
  affiliation  String // SSDC, CDC, BBDC
  gender       String
  email        String            @unique
  password     String
  language     String
  experience   Int
  type         String // enums("auto", "manual", "both")
  carModel     String
  tokens       InstructorToken[]
  availability DateTime[]
  bookings     Booking[]
  reviews      Review[]
  chatRoom     ChatRoom[]
}

model Booking {
  id           String     @id @default(uuid())
  apptDate     DateTime
  description  String
  feedback     String?
  studentId    String
  instructorId String
  status       String // Scheduled, Completed, Rejected
  student      Student    @relation(fields: [studentId], references: [id])
  instructor   Instructor @relation(fields: [instructorId], references: [id])
}

model ChatRoom {
  id           String     @id @default(uuid())
  studentId    String
  instructorId String
  roomId       String
  student      Student    @relation(fields: [studentId], references: [id])
  instructor   Instructor @relation(fields: [instructorId], references: [id])
}

model Review {
  id           String     @id @default(uuid())
  studentId    String
  instructorId String
  rating       Float
  student      Student    @relation(fields: [studentId], references: [id])
  instructor   Instructor @relation(fields: [instructorId], references: [id])
}

model StudentToken {
  id           String   @id @default(uuid())
  studentId    String
  refreshToken String   @unique
  createdAt    DateTime @default(now())
  student      Student  @relation(fields: [studentId], references: [id])
}

model InstructorToken {
  id           String     @id @default(uuid())
  instructorId String
  refreshToken String     @unique
  createdAt    DateTime   @default(now())
  instructor   Instructor @relation(fields: [instructorId], references: [id])
}


